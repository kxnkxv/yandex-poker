{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "types": ["node", "jest"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "Components": ["./src/components"],
      "Core": ["./src/core"],
      "core": ["./src/core"],
      "Hooks": ["./src/hooks"],
      "Images": ["./src/images"],
      "Pages": ["./src/pages"],
      "Styles": ["./src/styles"],
      "Types": ["./src/types"],
      "Utils": ["./src/utils"],
      "*": ["./src/*"]
    },
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types", "src/types"]
  },
  "include": ["src", "typings/**/*.d.ts", "./node_modules/@types"],
  "exclude": ["**/*.js"]
}
